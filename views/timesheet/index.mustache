<nav class="row">
	<div class="small-2 columns">
		<a class="button secondary expand" href="{{ previousUrl }}">Prev</a>
	</div>

	<div class="small-8 columns text-center">
		<a class="button secondary expand" href="#">{{ date }}</a>
	</div>

	<div class="small-2 columns text-right">
		<a class="button secondary expand" href="{{ nextUrl }}">Next</a>
	</div>
</nav>

<h1 class="text-center">Timesheet</h1>

<div class="time-entries">
	{{#timeEntries}}
		<div class="row">
			<div class=" small-12 columns">

				<section class="time-entry panel"
				         data-id="{{ id }}"
				         data-project-id="{{ project.id }}"
				         data-issue-id="{{ issue.id }}">
					<div class="row">
						<div class="small-8 large-10 columns">
							<span class="project-label">{{ project.name }}</span>
							{{#issue}}
								<h2>{{ subject }}</h2>
								{{#comments}}
									<p>{{ comments }}</p>
								{{/comments}}
							{{/issue}}
							{{^issue}}
								<h2>{{ comments }}</h2>
							{{/issue}}
						</div>
						<div class="small-4 large-2 columns">
							<div class="hours">{{ hours }}</div>
						</div>
					</div>
				</section>
			</div>
		</div>
	{{/timeEntries}}
	<div class="row">
		<div class=" small-12 columns">
			<section class="time-entry total">
				<div class="row">
					<div class="small-8 large-10 columns">
						<h2>Total</h2>
					</div>
					<div class="small-4 large-2 columns">
						<div class="hours">{{ totalHours }}</div>
					</div>
				</div>
			</section>
		</div>
	</div>
</div>
<hr>
